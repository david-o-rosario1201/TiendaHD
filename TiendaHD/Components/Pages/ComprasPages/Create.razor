@page "/CreateCompras"
@rendermode InteractiveServer
@inject NavigationManager navigation
@inject CompraService compraService

<PageTitle>Crear Nueva Compra</PageTitle>
<EditForm Model="compra" OnValidSubmit="Crear">
    <DataAnnotationsValidator />
    <div class="container mt-4">
        <div class="card shadow-lg">
            @*Header*@
            <div class="card-header text-center">
                <h3><strong>🛒 Crear Nueva Compra</strong></h3>
            </div>

            @*Body*@
            <div class="card-body">
                @* Pantalones *@
                <div class="mb-4">
                    <h5 class="fw-bold">👖 Pantalones</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label" for="cantidadpantalones">Cantidad:</label>
                            <InputNumber id="cantidadpantalones" class="form-control" @bind-Value="compra.CantidadPantalones" min="0"></InputNumber>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="preciopantalones">Precio:</label>
                            <InputNumber id="preciopantalones" class="form-control" @bind-Value="compra.PrecioPantalones" min="0"></InputNumber>
                        </div>
                    </div>
                </div>

                @* Perfumes *@
                <div class="mb-4">
                    <h5 class="fw-bold">💨 Perfumes</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label" for="cantidadperfumes">Cantidad:</label>
                            <InputNumber id="cantidadperfumes" class="form-control" @bind-Value="compra.CantidadPerfumes" min="0"></InputNumber>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="precioperfumes">Precio:</label>
                            <InputNumber id="precioperfumes" class="form-control" @bind-Value="compra.PrecioPerfumes" min="0"></InputNumber>
                        </div>
                    </div>
                </div>

                @* Sweater *@
                <div class="mb-4">
                    <h5 class="fw-bold">🧥 Sweater</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label" for="cantidadsweater">Cantidad:</label>
                            <InputNumber id="cantidadsweater" class="form-control" @bind-Value="compra.CantidadSweater" min="0"></InputNumber>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="preciosweater">Precio:</label>
                            <InputNumber id="preciosweater" class="form-control" @bind-Value="compra.PrecioSweater" min="0"></InputNumber>
                        </div>
                    </div>
                </div>
            </div>

            @*Footer*@
            <div class="card-footer d-flex justify-content-center">
                <div class="px-2">
                    <button type="button" class="btn btn-outline-danger" @onclick="Volver"><i class="bi bi-box-arrow-left" /> Volver</button>
                </div>
                <button type="submit" class="btn btn-outline-dark"><i class="bi bi-floppy-fill" /> Crear</button>
            </div>
        </div>
    </div>
</EditForm>



@code {
	public Compras compra { get; set; } = new Compras();

	public async void Crear()
	{
		await compraService.Crear(compra);
		await Task.Delay(1000);
		Volver();

		StateHasChanged();
		await Task.Delay(2000);
	}

	void Volver()
	{
		navigation.NavigateTo("/Compras");
	}
}
